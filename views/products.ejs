<%- include('includes/head'); %>

    <body>
        <div id="page" class="site page-single">
            <header>
                <%- include('includes/header_top'); %>
                    <%- include('includes/header_nav'); %>
                        <%- include('includes/header_main'); %>
            </header>
            <main>
                <div id="featuredproducts" class="features">
                    <div class="container">
                        <div class="wrapper">
                            <div class="column">
                                <div class="sectop flexitem">
                                    <h2><span class="circle"></span><span>
                                            <%= title %>
                                        </span></h2>
                                </div>
                                <div class="products main flexwrap">
                                    <% data.forEach((row)=> {%>
                                        <div class="item">
                                            <div class="media">
                                                <div class="image object-cover">
                                                    <a href="#">
                                                        <img src="<%= row.imageURL %>" alt="">
                                                    </a>
                                                </div>
                                                <div class="hoverable">
                                                    <ul>
                                                        <li class="active"><a href="#"><i
                                                                    class="fa-regular fa-heart"></i></a></li>
                                                        <li><a href="#"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                                        </li>
                                                        <li><a href="#"><i class="fa fa-random" aria-hidden="true"></i></a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <!-- <div class="discount circle flexcenter"><span>32%</span></div> -->
                                            </div>
                                            <div class="content">
                                                <h3 class="main-links"><a href="/<%= row.productcode %>">
                                                        <%= row.productname %>
                                                    </a>
                                                </h3>
                                                <div class="rating">
                                                    <div class="stars"></div>
                                                    <span class="mini-text">
                                                        <%= row.reviewed %>
                                                    </span>
                                                </div>
                                                <div class="price">
                                                    <span class="current">INR.<%= row.currentprice %></span>
                                                    <span class="normal mini-text">INR.<%= row.mrp %></span>
                                                </div>
                                                <div class="footer">
                                                    <ul class="mini-text">
                                                        <%= row.features %>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    <script src="javascript/script.js"></script>
    </body>